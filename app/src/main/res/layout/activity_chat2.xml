<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="AI CHAT"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp" />


    <!-- Chat area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="216dp"
            android:layout_height="135dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/search_bar_background"
            android:padding="8dp"
            android:paddingBottom="50dp"
            android:text="........................."
            android:textColor="#000000" />

        <TextView
            android:layout_width="216dp"
            android:layout_height="135dp"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:background="@drawable/search_bar_background"
            android:padding="8dp"
            android:text="........................"
            android:textColor="#000000"
            android:tint="#000000" />

    </LinearLayout>

    <!-- User input area (unchanged) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_bar_background"
        android:padding="12dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="In an average croissant, how many calories does it contain?"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingEnd="8dp" />

        <ImageButton
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Submit Chat"
            android:onClick="chat_page_submit"
            android:src="@drawable/ic_arrow_upward"
            app:tint="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:drawableTop="@drawable/ic_home2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:fontFamily="@font/montserrat_regular" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calendar"
            android:drawableTop="@drawable/ic_calender2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:fontFamily="@font/montserrat_regular" />
    </LinearLayout>

</LinearLayout>